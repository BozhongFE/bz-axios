{
  "compilerOptions": {
    "outDir": "es",
    "target": "ESNext",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noUnusedLocals": true,
    "suppressImplicitAnyIndexErrors": true,
    "allowSyntheticDefaultImports": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
  },
  "types": ["node"],

  "typeAcquisition": {
    "enable": false,
    "include": [
      "axios",
      "qs"
    ]
  },
  "include": [
    "src/**/*",
    "./global.d.ts"
  ],
  "exclude": [
    "node_modules/**/*"
  ]
}